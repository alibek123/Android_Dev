<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/white_opacity_40"/>
            <corners android:bottomLeftRadius="@dimen/default_corner_radius" android:bottomRightRadius="@dimen/default_corner_radius"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip android:gravity="left" android:clipOrientation="horizontal">
            <shape>
                <solid android:color="@color/orange"/>
                <corners android:bottomLeftRadius="@dimen/default_corner_radius" android:bottomRightRadius="@dimen/default_corner_radius"/>
            </shape>
        </clip>
    </item>
</layer-list>
