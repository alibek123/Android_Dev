<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item app:stateError="true">
        <layer-list>
            <item>
                <shape>
                    <size android:height="4dp" android:width="40dp"/>
                    <corners android:radius="@dimen/default_corner_radius"/>
                    <solid android:color="@color/gray_242"/>
                </shape>
            </item>
            <item android:right="20dp">
                <shape>
                    <size android:height="4dp" android:width="20dp"/>
                    <corners android:radius="@dimen/default_corner_radius"/>
                    <solid android:color="@color/red"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item app:stateSuccess="true">
        <shape>
            <size android:height="4dp" android:width="40dp"/>
            <corners android:radius="@dimen/default_corner_radius"/>
            <solid android:color="@color/apple_green"/>
        </shape>
    </item>
    <item>
        <shape>
            <size android:height="4dp" android:width="40dp"/>
            <corners android:radius="@dimen/default_corner_radius"/>
            <solid android:color="@color/gray_242"/>
        </shape>
    </item>
</selector>
