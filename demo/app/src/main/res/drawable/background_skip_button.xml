                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/default_corner_radius"/>
                    <solid android:color="@color/button_skip"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>
