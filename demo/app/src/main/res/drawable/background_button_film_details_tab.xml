<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_item"/>
        </shape>
    </item>
    <item>
        <ripple android:color="@color/background_item_pressed_ripple">
            <item android:id="@android:id/mask" android:drawable="@android:color/white"/>
            <item>
                <selector>
                    <item>
                        <shape android:shape="rectangle">
                            <solid android:color="@color/background_item"/>
                        </shape>
                    </item>
                </selector>
            </item>
        </ripple>
    </item>
</selector>
