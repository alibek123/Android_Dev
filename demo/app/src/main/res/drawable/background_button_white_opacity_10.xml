<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/default_corner_radius"/>
            <solid android:color="@color/button_white_opacity_disabled"/>
        </shape>
    </item>
    <item>
        <ripple android:color="@color/button_white_opacity_pressed_ripple">
            <item android:id="@android:id/mask" android:drawable="@android:color/white"/>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/button_white_opacity"/>
                    <corners android:radius="@dimen/default_corner_radius"/>
                </shape>
            </item>
        </ripple>
    </item>
</selector>
